{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/projects.css">
{{/section}}

<div class="projects-header">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <h1><i class="fas fa-briefcase me-2"></i>Projects</h1>
        <p class="mb-0">Manage your work projects and hourly rates</p>
      </div>
      <div class="col-auto">
        <a href="/projects/add" class="btn btn-light">
          <i class="fas fa-plus me-2"></i>New Project
        </a>
      </div>
    </div>
  </div>
</div>

<div class="container">
  {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success}}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  {{/if}}

  {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{error}}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  {{/if}}

  {{#if projects.length}}
    <div class="row">
      {{#each projects}}
        <div class="col-md-6 col-lg-4">
          <div class="project-card">
            <div class="project-header" style="border-left-color: {{this.color}};">
              <div class="project-name">{{this.name}}</div>
              {{#if this.client}}
                <div class="project-client">
                  <i class="fas fa-building me-1"></i>{{this.client}}
                </div>
              {{/if}}
              {{#if this.description}}
                <p class="text-muted small mb-0">{{this.description}}</p>
              {{/if}}
            </div>
            <div class="project-meta">
              <div>
                <span class="project-status status-{{this.status}}">
                  {{#if (eq this.status 'active')}}Active{{/if}}
                  {{#if (eq this.status 'completed')}}Completed{{/if}}
                  {{#if (eq this.status 'on-hold')}}On Hold{{/if}}
                  {{#if (eq this.status 'cancelled')}}Cancelled{{/if}}
                </span>
                <div class="project-rate mt-1">{{this.formattedHourlyRate}}/hr</div>
              </div>
              <div class="btn-group">
                <a href="/projects/view/{{this._id}}" class="btn btn-outline-primary btn-sm">
                  <i class="fas fa-eye"></i>
                </a>
                <a href="/projects/edit/{{this._id}}" class="btn btn-outline-secondary btn-sm">
                  <i class="fas fa-edit"></i>
                </a>
                <button type="button" class="btn btn-outline-danger btn-sm" 
                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                        data-project-id="{{this._id}}" data-project-name="{{this.name}}">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty-state">
      <i class="fas fa-briefcase"></i>
      <h3>No Projects Yet</h3>
      <p>Create your first project to start tracking work hours with specific rates.</p>
      <a href="/projects/add" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Create Project
      </a>
    </div>
  {{/if}}
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the project "<span id="projectName"></span>"?</p>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          This action cannot be undone. Make sure there are no work entries associated with this project.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete Project</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/projects.js"></script>
{{/section}}
