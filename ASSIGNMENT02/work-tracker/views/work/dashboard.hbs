{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/work.css">
{{/section}}

<div class="container">
  <div class="dashboard-header">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h1>Dashboard</h1>
          <p class="mb-0">Welcome back, {{user.firstName}}! Here's your work summary.</p>
        </div>
        <div class="col-md-4 text-end">
          <a href="/work/add" class="btn btn-light btn-lg">
            <i class="fas fa-plus me-2"></i>Add Entry
          </a>
        </div>
      </div>
    </div>
  </div>

  {{#if success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{success}}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  {{/if}}

  {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{error}}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  {{/if}}

  <!-- Statistics -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number">{{workEntries.length}}</div>
        <div class="stats-label">Total Entries</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number">{{totalHours}}</div>
        <div class="stats-label">Hours Worked</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number">${{totalGrossEarnings}}</div>
        <div class="stats-label">Gross Earnings</div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="stats-card">
        <div class="stats-number text-success">${{totalNetEarnings}}</div>
        <div class="stats-label">Net Earnings</div>
        <small class="text-muted">After deductions: ${{totalDeductions}}</small>
      </div>
    </div>
  </div>

  <!-- Filter Controls -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
              <i class="fas fa-filter me-2"></i>Filter & Search
            </h5>
            <button class="btn btn-sm btn-outline-secondary" type="button" id="toggleFilters">
              <i class="fas fa-chevron-down me-1"></i>
              <span id="filterToggleText">Show Filters</span>
            </button>
          </div>
        </div>
        <div class="card-body" id="filterPanel" style="display: none;">
          <form method="GET" action="/work/dashboard" class="filter-form">
            <div class="row g-3">
              <!-- Project Filter -->
              <div class="col-md-3">
                <label for="project" class="form-label">Project</label>
                <select class="form-select" id="project" name="project">
                  <option value="all" {{#if (eq currentFilters.project 'all')}}selected{{/if}}>All Projects</option>
                  {{#each projects}}
                    <option value="{{this._id}}" {{#if (eq this._id ../currentFilters.project)}}selected{{/if}}>
                      {{this.name}}
                    </option>
                  {{/each}}
                </select>
              </div>
              
              <!-- Date Range -->
              <div class="col-md-2">
                <label for="dateFrom" class="form-label">From Date</label>
                <input type="date" class="form-control" id="dateFrom" name="dateFrom" value="{{currentFilters.dateFrom}}">
              </div>
              
              <div class="col-md-2">
                <label for="dateTo" class="form-label">To Date</label>
                <input type="date" class="form-control" id="dateTo" name="dateTo" value="{{currentFilters.dateTo}}">
              </div>
              
              <!-- Search -->
              <div class="col-md-3">
                <label for="search" class="form-label">Search Description</label>
                <input type="text" class="form-control" id="search" name="search" 
                       placeholder="Search in descriptions..." value="{{currentFilters.search}}">
              </div>
              
              <!-- Sort By -->
              <div class="col-md-2">
                <label for="sortBy" class="form-label">Sort By</label>
                <select class="form-select" id="sortBy" name="sortBy">
                  <option value="date-desc" {{#if (eq currentFilters.sortBy 'date-desc')}}selected{{/if}}>Newest First</option>
                  <option value="date-asc" {{#if (eq currentFilters.sortBy 'date-asc')}}selected{{/if}}>Oldest First</option>
                  <option value="hours-desc" {{#if (eq currentFilters.sortBy 'hours-desc')}}selected{{/if}}>Most Hours</option>
                  <option value="hours-asc" {{#if (eq currentFilters.sortBy 'hours-asc')}}selected{{/if}}>Least Hours</option>
                  <option value="earnings-desc" {{#if (eq currentFilters.sortBy 'earnings-desc')}}selected{{/if}}>Highest Earnings</option>
                  <option value="earnings-asc" {{#if (eq currentFilters.sortBy 'earnings-asc')}}selected{{/if}}>Lowest Earnings</option>
                </select>
              </div>
            </div>
            
            <div class="row mt-3">
              <div class="col-12">
                <button type="submit" class="btn btn-primary me-2">
                  <i class="fas fa-search me-1"></i>Apply Filters
                </button>
                <a href="/work/dashboard" class="btn btn-outline-secondary">
                  <i class="fas fa-times me-1"></i>Clear All
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Work Entries -->
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h3>Work Entries</h3>
          <small class="text-muted">
            Showing {{entriesCount}} entries
            {{#if currentFilters.project}}
              {{#unless (eq currentFilters.project 'all')}}
                • Filtered by project
              {{/unless}}
            {{/if}}
            {{#if currentFilters.dateFrom}}
              • From {{currentFilters.dateFrom}}
            {{/if}}
            {{#if currentFilters.dateTo}}
              • To {{currentFilters.dateTo}}
            {{/if}}
            {{#if currentFilters.search}}
              • Search: "{{currentFilters.search}}"
            {{/if}}
          </small>
        </div>
        <a href="/work/public" class="btn btn-outline-primary">
          <i class="fas fa-eye me-2"></i>View Public Entries
        </a>
      </div>

      {{#if workEntries.length}}
        {{#each workEntries}}
          <div class="entry-card">
            <div class="entry-header">
              <div>
                <div class="entry-project">{{this.projectId.name}}</div>
                <div class="entry-date">{{formatDate this.date}}</div>
              </div>
            </div>
            <div class="entry-body">
              <div class="entry-description">{{this.description}}</div>
              <div class="entry-details">
                <div class="entry-time">
                  <span><strong>Start:</strong> {{this.startTime}}</span>
                  <span><strong>End:</strong> {{this.endTime}}</span>
                  {{#if this.breakTime}}
                  <span><strong>Break:</strong> {{this.formattedBreakTime}}</span>
                  {{/if}}
                  <span><strong>Hours:</strong> {{this.totalHours}}</span>
                  <span><strong>Base Rate:</strong> ${{this.hourlyRate}}/hr</span>
                  {{#if this.isOvertime}}
                  <span class="overtime-badge">
                    <i class="fas fa-star text-warning me-1"></i>
                    <strong>{{this.overtimeLabel}}</strong> - {{this.formattedEffectiveRate}}/hr
                  </span>
                  {{/if}}
                </div>
                <div class="d-flex align-items-center gap-3">
                  <div class="entry-earnings">
                    <div class="fw-bold text-success">Net: {{formatCurrency this.netEarnings}}</div>
                    <small class="text-muted">Gross: {{formatCurrency this.grossEarnings}}</small>
                    <small class="text-muted d-block">Deductions: {{formatCurrency this.totalDeductions}}</small>
                  </div>
                  <div class="entry-actions">
                    <a href="/work/edit/{{this._id}}" class="btn btn-outline-primary btn-sm">
                      <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-sm" 
                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-entry-id="{{this._id}}" data-entry-project="{{this.projectId.name}}">
                      <i class="fas fa-trash me-1"></i>Delete
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="empty-state">
          <i class="fas fa-search"></i>
          {{#if (or currentFilters.project currentFilters.dateFrom currentFilters.dateTo currentFilters.search)}}
            <h4>No entries match your filters</h4>
            <p>Try adjusting your filter criteria to see more results.</p>
            <a href="/work/dashboard" class="btn btn-outline-primary me-2">
              <i class="fas fa-times me-2"></i>Clear All Filters
            </a>
            <a href="/work/add" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i>Add New Entry
            </a>
          {{else}}
            <h4>No work entries yet</h4>
            <p>Start tracking your work by adding your first entry.</p>
            <a href="/work/add" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i>Add Your First Entry
            </a>
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the work entry for <strong id="deleteProjectName"></strong>?</p>
        <p class="text-muted">This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Delete Entry</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{#section 'scripts'}}
<script src="/javascripts/work.js"></script>
{{/section}}
