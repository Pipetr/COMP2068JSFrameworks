          <span class="stat-number">24/7</span>
          <span class="stat-label">Availability</span>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-item">
          <span class="stat-number">100%</span>
          <span class="stat-label">Free</span>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-item">
          <span class="stat-number">0</span>
          <span class="stat-label">Setup Time</span>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2 class="cta-title">Ready to Start Tracking?</h2>
        <p class="cta-subtitle">
          Join thousands of professionals who trust Work Tracker to manage their time and projects
        </p>
        <a href="/auth/register" class="btn btn-primary btn-lg me-3">
          <i class="fas fa-rocket me-2"></i>Start Free Today
        </a>
        <a href="/auth/login" class="btn btn-outline-light btn-lg">
          <i class="fas fa-sign-in-alt me-2"></i>Sign In
        </a>
      </div>
    </div>
  </div>
</section>
