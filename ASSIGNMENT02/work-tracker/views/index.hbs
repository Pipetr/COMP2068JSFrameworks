{{#section 'styles'}}
<link rel="stylesheet" href="/stylesheets/home.css">
{{/section}}

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h1 class="hero-title">{{title}}</h1>
        <p class="hero-subtitle">{{subtitle}}</p>
        <div class="hero-buttons">
          <a href="/auth/register" class="btn btn-light btn-lg">
            <i class="fas fa-user-plus me-2"></i>Get Started Free
          </a>
          <a href="/work/public" class="btn btn-outline-light btn-lg">
            <i class="fas fa-eye me-2"></i>View Public Entries
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center mb-5">
        <h2>Why Choose Work Tracker?</h2>
        <p class="lead">Everything you need to manage your time and projects professionally</p>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-clock"></i>
          </div>
          <h3 class="feature-title">Time Tracking</h3>
          <p class="feature-description">
            Easily track your work hours with precise start and end times. 
            Automatic calculations ensure accurate time recording.
          </p>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-dollar-sign"></i>
          </div>
          <h3 class="feature-title">Earnings Calculator</h3>
          <p class="feature-description">
            Set hourly rates and automatically calculate earnings. 
            Get real-time insights into your project profitability.
          </p>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-project-diagram"></i>
          </div>
          <h3 class="feature-title">Project Management</h3>
          <p class="feature-description">
            Organize work by projects with detailed descriptions. 
            Keep track of multiple clients and tasks effortlessly.
          </p>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h3 class="feature-title">Secure Authentication</h3>
          <p class="feature-description">
            Your data is protected with secure authentication. 
            Sign in with GitHub or create a secure account.
          </p>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-chart-bar"></i>
          </div>
          <h3 class="feature-title">Dashboard Analytics</h3>
          <p class="feature-description">
            Get insights with comprehensive dashboard views. 
            Track total hours, earnings, and project progress.
          </p>
        </div>
      </div>
      
      <div class="col-md-4 mb-4">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3 class="feature-title">Mobile Responsive</h3>
          <p class="feature-description">
            Access your work tracker from any device. 
            Responsive design ensures great experience everywhere.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

